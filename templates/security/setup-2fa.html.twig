{% extends 'base.html.twig' %}

{% block title %}Qr code!{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            <div class="container px-0">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        </div>
    {% endif %}

    <div class="container mt-5 mb-5 text-center">
        <h1>Scan this QR Code:</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post">
                    <div class="mt-3 mb-3">
                        <img width="300" height="300" class="shadow-sm" src="data:image/png;base64,{{ qrCodeImage }}" alt="{{ secretKey }}" />
                    </div>

                    <div class="form-group">
                        <input type="text" id="qrCode" name="qrCode" class="form-control form-control-lg" required="required" placeholder="Please enter the 6 code from your authenticator app" autofocus />
                    </div>
                    <input type="submit" class="btn btn-primary" value="Setup" />
                </form>
            </div>
        </div>
    </div>
{% endblock %}